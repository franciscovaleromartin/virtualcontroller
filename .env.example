# ClickUp OAuth Configuration
CLICKUP_CLIENT_ID=your_clickup_client_id
CLICKUP_CLIENT_SECRET=your_clickup_client_secret
REDIRECT_URI=https://virtualcontroller.onrender.com

# Email Configuration for Alerts
# Configure these variables to enable email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password

# Webhook Security
# Generate a secure random token to validate webhook requests from make.com
WEBHOOK_SECRET_TOKEN=your_secure_random_token_here

# Database Configuration
# Path to SQLite database file (optional, defaults to virtualcontroller.db)
DATABASE_PATH=virtualcontroller.db
